#include<iostream>
using namespace std;
int main(){
	float c,r,f,k;
	int n; 
	cout << "1.Celcius\n 2.Fahrenheit\n 3. Reamur\n 4.Kelvin\n";
	cin >>n;
	if (n==1){
		cout << "masukan c= ";
		cin>>c;
	c=c;
	r = 4*c/5;
	f = (9*c/5)+32;
	k = c+237;	
	}
	else if(n==2){
		cout << "masukan f= ";
		cin>>f;
	f=f;
	r=(f-32)*(4/9);
	c=(f-32)*(5/9);
	k=(f*(5/9)-32*(5/9))+237;
	}
	else if(n==3){
		cout << "masukan R= ";
		cin>>r;
	r=r;
	f=((9/5)*r*5/4)+32;
	c=r*(5/4);
	k=r*(5/4)+237;
	}
	else if(n==4){
	k=k;
	f=9/5*(k-237)+32;
	c=k-237;
	r=(4/5)*(k-237);
	}
	
	cout<<"Suhu Celcius		: "<<c<<endl;
	cout<<"Suhu Reamur		: "<<r<<endl;
	cout<<"Suhu Ferenheit   : "<<f<<endl;
	cout<<"Suhu Kelvin		: "<<k<<endl;
}

